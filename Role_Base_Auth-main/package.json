{
  "name": "role-based-auth-system",
  "version": "1.0.0",
  "description": "A full-stack role-based authentication system using MERN stack",
  "main": "index.js",
  "scripts": {
    "install-all": "npm install && cd backend && npm install && cd ../client && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd backend && npm start"
  },
  "keywords": [
    "authentication",
    "role-based",
    "mern",
    "react",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}